{
  "name": "hasanah",
  "displayName": "hasanah",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hasanah.helloWorld",
        "title": "Hello World",
        "description": "Displays a random ayah at a user-defined interval"
      }
    ],
    "configuration": {
      "title": "Hasanah",
      "properties": {
        "hasanah.delay": {
          "type": "number",
          "default": 30,
          "description": "Delay for ayah display in seconds"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}