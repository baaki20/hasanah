{
  "name": "hasanah",
  "displayName": "hasanah",
  "description": "",
  "publisher": "omarabdo",
  "version": "0.4.0",
  "icon": "Hasanah-04.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/oovaa/hasanah.git"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "quotes",
    "motivation",
    "quran",
    "ayat",
    "Islam"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Hasanah",
      "properties": {
        "hasanah.ayah": {
          "type": "string",
          "default": "",
          "description": "Specify an Ayah in the format <surahnum:ahyanum>"
        },
        "hasanah.delay": {
          "type": "number",
          "default": 30,
          "description": "Delay for ayah display in minutes"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}